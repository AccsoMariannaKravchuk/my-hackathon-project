{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-console": "off",
        "node/no-unpublished-require": "off"
      }
    }
  ]
}
